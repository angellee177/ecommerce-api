    "definitions": {
      "UserRegister": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example":"angel"
          },
          "email": {
            "type": "string",
            "example": "angel@mail.com"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "angel@mail.com"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        }
      },
      "Task": {
        "type": "object",
        "required": [
          "task",
          "status"
        ],
        "properties": {
          "task": {
            "type": "string",
            "example": "task 1"
          },
          "status": {
            "type": "string",
            "example": "false"
          }
        }
      },
      "UpdateTask": {
        "type": "object",
        "required": [
          "task",
          "status"
        ],
        "properties": {
          "task": {
            "type": "string",
            "example": "task updated"
          },
          "status": {
            "type": "string",
            "example": "true"
